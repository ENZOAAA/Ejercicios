//Agregamos "Aceite de girasol" a la lista:
const compras = ['pan','leche','frutas','verduras','cafe'];
compras.unshift('Aceite de girasol');
console.log(compras);

//Modificamos la lista quitando "Aceite de girasol":
compras.shift()
console.log(compras);

//lista de peliculas:
const peliculas = [
{titulo :'The Dark Knight', fecha: 2008, director: 'Chirtopher Nolan'},
{titulo :'El seÃ±or de los anillos: "El retorno del rey"', fecha: 2004, director: 'Peter Jackson'},
{titulo : 'Volver al futuro', fecha: 1985, director :'Robert Zemeckis'}
];
//Nueva lista de peliculas, contiene peliculas posteriores a la fecha: 1 enero 2010:
const pelis = peliculas.filter(obj => obj.fecha > 2010-01-01 ) ;
console.log(pelis);

//Solo directores de la lista de peliculas original:
const directores = peliculas.map((valor, indice) => `${indice+1}- ${valor.director}`)
console.log(directores);

//Nueva lista solo titulos de lista original:
const titulos = peliculas.map((valor, indice) => `${indice+1}- ${valor.titulo}`)
console.log(titulos);

//Nueva lista concatenando directores y titulos:
const titulo_director = [directores.concat(titulos)]
console.log( titulo_director);

//Nueva lista concatenando con factor de propagacion:
const titulos_directores = [...directores, ...titulos]
console.log(titulos_directores);
